generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model categories {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  brand    String
  category String
  color    String
  name     String
  price    Int
  sizes    Int[]
  tag      String
  uri      String
}

model herosliders {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  sizes Int[]
  uri   String
}

model recommendeds {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  sizes Int[]
  uri   String
}

model trendings {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  sizes Int[]
  uri   String
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  token    String? @unique
}
